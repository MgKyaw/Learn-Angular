  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
